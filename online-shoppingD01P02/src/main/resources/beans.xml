<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">
<!-- Battery Bean -->
<bean id="batteryBean" class="com.example.Battery">
<constructor-arg value="101"/>
<constructor-arg value="Rechargeable Battery"/>
<constructor-arg value="19.99"/>
<constructor-arg value="true"/>
</bean>
<!-- Disc Bean -->
<bean id="discBean" class="com.example.Disc">
<constructor-arg value="102"/>
<constructor-arg value="DVD Disc"/>
<constructor-arg value="5.99"/>
<constructor-arg value="4"/>
</bean>
</beans>